<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

<persistence-unit name="default">
  <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
  <class>com.example.lab02.backend.models.Person</class>
  <class>com.example.lab02.backend.models.Customer</class>
  <class>com.example.lab02.backend.models.Employee</class>
  <class>com.example.lab02.backend.models.Product</class>
  <class>com.example.lab02.backend.models.ProductPrice</class>
  <class>com.example.lab02.backend.models.ProductImage</class>
  <class>com.example.lab02.backend.models.Order</class>
  <class>com.example.lab02.backend.models.OrderDetail</class>
  <class>com.example.lab02.backend.models.OrderDetailPK</class>

  <exclude-unlisted-classes>false</exclude-unlisted-classes>



  <properties>
    <property name="jakarta.persistence.jdbc.driver"
              value="org.mariadb.jdbc.Driver"/>
    <property name="jakarta.persistence.jdbc.url"
              value="jdbc:mariadb://localhost:3306,/shop-online-new?createDatabaseIfNotExist=true"/>
    <property name="jakarta.persistence.jdbc.user" value="root"/>
    <property name="jakarta.persistence.jdbc.password"
              value="root"/>
    <property name="jakarta.persistence.schemageneration.database.action" value="create"/>
    <!--show query-->
    <property name="hibernate.show_sql" value="true" />
    <property name="hibernate.hbm2ddl.auto" value="update" />

  </properties>

</persistence-unit>
</persistence>
